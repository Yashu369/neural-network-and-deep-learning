import numpy as np

relu = lambda x: np.maximum(0, x)
sigmoid = lambda x: 1 / (1 + np.exp(-x))

x = np.array([1, 0, 1])

W_H1 = np.random.randn(3)   
W_H2 = np.random.randn(3)   
W_out = np.random.randn(2)  

z_H1 = np.dot(x, W_H1)
H1 = relu(z_H1)

z_H2 = np.dot(x, W_H2)
H2 = relu(z_H2)

z_out = H1*W_out[0] + H2*W_out[1]
output = sigmoid(z_out)

print("Random W_H1 =", W_H1)
print("Random W_H2 =", W_H2)
print("Random W_out =", W_out)

print("\nz_H1 =", z_H1)
print("H1 =", H1)

print("z_H2 =", z_H2)
print("H2 =", H2)

print("\nz_out =", z_out)
print("Output (Sigmoid) =", output)

if output > 0.5:
    print("\nMail is: SPAM")
else:
    print("\nMail is: NOT SPAM")
